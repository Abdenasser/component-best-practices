<div class="form-group">
  {{input
      class="form-control"
      placeholder="Name"
      value=thing.name
  }}
</div>

<div class="form-group">
  {{input
      class="form-control"
      type="number"
      step="1"
      placeholder="Price"
      value=thing.price
  }}
</div>

<button class="btn" {{action (action "saveThing")}}>Update</button>